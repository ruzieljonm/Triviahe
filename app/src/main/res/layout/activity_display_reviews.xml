<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ruzieljonm.triviahe.DisplayReviews">

        <TextView
            android:id="@+id/textView"
            android:layout_width="105dp"
            android:layout_height="wrap_content"
            android:text="Type a Review:"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="21dp"
            android:layout_marginStart="21dp"
            android:layout_marginTop="38dp" />

    <EditText
        android:id="@+id/editText_Review"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView"
        android:layout_marginLeft="11dp"
        android:layout_marginStart="11dp"
        android:layout_toEndOf="@+id/textView"
        android:layout_toRightOf="@+id/textView"
        android:ems="10"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/button_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/editText_Review"
        android:layout_alignRight="@+id/editText_Review"
        android:layout_below="@+id/editText_Review"
        android:layout_marginTop="13dp"
        android:text="Submit"
        android:textSize="10sp" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></ListView>

</RelativeLayout>


